            <h4>Subscribe</h4>
            <p>Stay updated with our latest news and announcements.</p>
            
            <div class="footer-newsletter">
                <input type="email" placeholder="Your Email">
                <button class="btn btn-primary">Subscribe</button>
            </div>
        </div>
    </div>
    
    <div class="footer-bottom">
        <div>© @DateTime.Now.Year MOXP Protocol. All rights reserved.</div>
        <div>$MOXP: AoYoV7hNkuVNcE9pZX447mELpAjqyo6bk9KaoXtEpump</div>
    </div>
</footer>

@code {
    private bool isMenuOpen = false;

    private async Task ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
        await JSRuntime.InvokeVoidAsync("toggleMenu", isMenuOpen);
    }

    private async Task CloseMenu()
    {
        if (isMenuOpen)
        {
            isMenuOpen = false;
            await JSRuntime.InvokeVoidAsync("toggleMenu", false);
        }
    }
}

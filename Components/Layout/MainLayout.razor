@inherits LayoutComponentBase
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

<!-- Particles Background -->
<div id="particles-js"></div>

<!-- Header -->
<header>
    <a href="#" class="logo">
        <i class="fas fa-cube"></i>
        <span>MOXP</span> Protocol
    </a>
    
    <nav id="nav">
        <ul>
            <li><a href="#features" @onclick="CloseMenu">Features</a></li>
            <li><a href="#tokenomics" @onclick="CloseMenu">Tokenomics</a></li>
            <li><a href="#roadmap" @onclick="CloseMenu">Roadmap</a></li>
            <li><a href="#team" @onclick="CloseMenu">Team</a></li>
            <li><a href="#" @onclick="CloseMenu">Whitepaper</a></li>
        </ul>
        
        <div class="header-btns">
            <button class="btn btn-primary">Launch DApp</button>
            <button class="btn btn-outline">Connect Wallet</button>
        </div>
    </nav>
    
    <button class="mobile-menu-btn" @onclick="ToggleMenu">
        <i class="@(isMenuOpen ? "fas fa-times" : "fas fa-bars")"></i>
    </button>
</header>

<main>
    @Body
</main>

<!-- Footer -->

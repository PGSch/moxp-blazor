@page "/"
@inject IJSRuntime JSRuntime

<!-- Hero Section -->
<section class="hero" @ref="heroSection">
    <div class="hero-content">
        <h1>Decentralized Finance Reimagined</h1>
        <p>MOXP Protocol <em><b>is a parody placeholder project</b></em> and combines the power of DeFi 2.0 with cutting-edge blockchain technology to deliver unprecedented yield opportunities with institutional-grade security.</p>
        
        <div class="hero-btns">
            <button class="btn btn-primary pulse">Buy $MOXP</button>
            <button class="btn btn-outline">Learn More</button>
        </div>
        
        <div class="hero-stats">
            <div class="stat-item">
                <div class="stat-value">$42.7M</div>
                <div class="stat-label">TVL</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">12.9K</div>
                <div class="stat-label">Holders</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">6.3%</div>
                <div class="stat-label">APY</div>
            </div>
        </div>
    </div>
    
    <div class="hero-token">
        <div class="token-3d"></div>
    </div>
</section>

<!-- Features -->
<section class="features" id="features">
    <div class="section-header">
        <h2>Why MOXP Protocol?</h2>
        <p>Our platform offers a comprehensive suite of DeFi products designed to maximize returns while minimizing risk.</p>
    </div>
    
    <div class="feature-grid">
        @foreach (var feature in features)
        {
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="@feature.Icon"></i>
                </div>
                <h3>@feature.Title</h3>
                <p>@feature.Description</p>
            </div>
        }
    </div>
</section>

<!-- Tokenomics -->
<section class="tokenomics" id="tokenomics">
    <div class="section-header">
        <h2>Tokenomics</h2>
        <p>The $MOXP token powers our ecosystem with carefully designed incentives for long-term growth.</p>
    </div>
    
    <div class="tokenomics-container">
        <div class="tokenomics-chart">
            <img src="images/supernovablackhole_red.png" alt="Tokenomics Chart" style="width: 100%; height: auto; border-radius: 50%;">
        </div>
        
        <div class="tokenomics-info">
            <h2>$MOXP Distribution</h2>
            <p>The total supply of 100 million $MOXP tokens is allocated strategically to ensure sustainable growth and community participation.</p>
            
            <div class="token-details">
                @foreach (var detail in tokenDetails)
                {
                    <div class="token-detail">
                        <h4>@detail.Label</h4>
                        <p>@detail.Value</p>
                    </div>
                }
            </div>
            
            <p>Holders benefit from staking rewards, governance rights, and a share of protocol revenues distributed weekly.</p>
            
            <button class="btn btn-primary">View Full Tokenomics</button>
        </div>
    </div>
</section>

<!-- Roadmap -->
<section class="roadmap" id="roadmap">
    <div class="section-header">
        <h2>Roadmap</h2>
        <p>Our strategic development plan to build the future of decentralized finance.</p>
    </div>
    
    <div class="timeline">
        @foreach (var item in roadmapItems)
        {
            <div class="timeline-item">
                <div class="timeline-date">@item.Date</div>
                <div class="timeline-content">
                    <h3>@item.Title</h3>
                    <p>@item.Description</p>
                </div>
            </div>
        }
    </div>
</section>

<!-- Team -->
<section class="team" id="team">
    <div class="section-header">
        <h2>Our Team</h2>
        <p>Industry veterans with decades of combined experience in blockchain, finance, and technology.</p>
    </div>
    
    <div class="team-grid">
        @foreach (var member in teamMembers)
        {
            <div class="team-member">
                <div class="member-image">
                    <img src="@member.ImageUrl" alt="@member.Name">
                </div>
                <div class="member-info">
                    <h3>@member.Name</h3>
                    <p>@member.Position</p>
                    <div class="member-social">
                        @if (!string.IsNullOrEmpty(member.TwitterUrl))
                        {
                            <a href="@member.TwitterUrl"><i class="fab fa-twitter"></i></a>
                        }
                        @if (!string.IsNullOrEmpty(member.GithubUrl))
                        {
                            <a href="@member.GithubUrl"><i class="fab fa-github"></i></a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- CTA -->
<section class="cta">
    <h2>Ready to Join the Future of Finance?</h2>
    <p>Start earning passive income with MOXP Protocol today. Simple, secure, and always in your control.</p>
    
    <div class="hero-btns">
        <button class="btn btn-primary pulse">Get Started</button>
        <button class="btn btn-outline">Read Docs</button>
    </div>
</section>

